#!/bin/bash

source ./config.cfg

echo "Stopping monitor mode on $DEVICE"
airmon-ng stop $DEVICE

echo "Switch wireless device $DEVICE to managed mode"
ifconfig $DEVICE down
iwconfig $DEVICE mode managed

iw dev $MON del

echo "Initiating device $DEVICE to stand by"
ifconfig $DEVICE up

echo "Enabling wireless device $DEVICE for managed by NetworkManager"
nmcli dev set $DEVICE managed yes

